<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView4"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="30dp"
        android:text="Team 1 Name"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bt2name"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:text="Team 2 Name"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bovers"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:text="Overs"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/bt1name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView4"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_toEndOf="@+id/textView4"
        android:layout_toRightOf="@+id/textView4"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Team 1"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/bt2name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bt1name"
        android:layout_alignStart="@+id/bt1name"
        android:layout_below="@+id/bt1name"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Team 2"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/bovers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bt2name"
        android:layout_alignStart="@+id/bt2name"
        android:layout_below="@+id/bt2name"
        android:ems="10"
        android:hint="20"
        android:inputType= "numberSigned|numberDecimal"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/bovers"
        android:layout_alignRight="@+id/bovers"
        android:layout_below="@+id/bovers"
        android:layout_marginTop="20dp"
        android:text="ok" />

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:onClick="back"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button8"
        android:layout_toLeftOf="@+id/button8"
        android:layout_toStartOf="@+id/button8"
        android:text="Back" />

</RelativeLayout>